<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/txt_room_count"
        style="@style/Header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_area"
        app:layout_constraintStart_toStartOf="@+id/txt_area"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2 комнаты" />

    <TextView
        android:id="@+id/txt_type"
        style="@style/DefaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="квартира"
        app:layout_constraintEnd_toEndOf="@+id/txt_room_count"
        app:layout_constraintStart_toStartOf="@+id/txt_room_count"
        app:layout_constraintTop_toBottomOf="@+id/txt_room_count" />

    <TextView
        android:id="@+id/txt_sleeps"
        style="@style/Header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/txt_floor"
        app:layout_constraintStart_toStartOf="@+id/txt_floor"
        app:layout_constraintTop_toTopOf="@+id/txt_room_count"
        android:text="2 " />

    <TextView
        android:id="@+id/txt_sleeps_hdr"
        style="@style/DefaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/txt_sleeps"
        app:layout_constraintStart_toStartOf="@+id/txt_sleeps"
        app:layout_constraintTop_toBottomOf="@+id/txt_sleeps"
        android:text="спальных места" />

    <TextView
        android:id="@+id/txt_area"
        style="@style/Header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/txt_floor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_type"
        tools:text="120 м" />

    <TextView
        android:id="@+id/txt_area_hdr"
        style="@style/DefaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common"
        app:layout_constraintEnd_toEndOf="@+id/txt_area"
        app:layout_constraintStart_toStartOf="@+id/txt_area"
        app:layout_constraintTop_toBottomOf="@+id/txt_area" />

    <TextView
        android:id="@+id/txt_floor"
        style="@style/Header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_area"
        app:layout_constraintTop_toBottomOf="@+id/txt_type"
        tools:text="45 из 200" />

    <TextView
        android:id="@+id/txt_floor_count"
        style="@style/DefaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/floor_lower_case"
        app:layout_constraintEnd_toEndOf="@+id/txt_floor"
        app:layout_constraintStart_toStartOf="@+id/txt_floor"
        app:layout_constraintTop_toBottomOf="@+id/txt_area" />


</androidx.constraintlayout.widget.ConstraintLayout>