<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/button_corner_radius</item>
    </style>

    <style name="DefaultButton" parent="Widget.Material3.Button">
        <item name="shapeAppearance">@style/ButtonShape</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:paddingVertical">@dimen/button_padding</item>
    </style>

    <style name="OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearance">@style/ButtonShape</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:paddingVertical">@dimen/button_padding</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DefaultText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="Header" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header2" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/header2_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text2" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="Text3" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="IconOnlyButton" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/Header</item>
        <item name="titleTextColor">?attr/colorPrimary</item>
    </style>

    <style name="SquareButton" parent="DefaultButton">
        <item name="android:paddingHorizontal">32dp</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>